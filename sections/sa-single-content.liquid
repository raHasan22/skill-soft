<div class="srs-single-content">
  <div class="container">
    <div class="content-container">
      {% if section.settings.show_breadcrumbs %}
        <div class="breadcrumbs">
          <div class="breadcrumbs-container">
            <div class="breadcrumbs-row">
              <div class="breadcrumbs-label">{{ section.settings.breadcrumbs_label }}</div>
              <div class="breadcrumbs-items">
                <!-- Home -->
                <div class="breadcrumb-item">
                  <a href="/" class="breadcrumb-text-container">
                    <div class="breadcrumb-text">Home</div>
                  </a>
                  <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M6.18262 4.21561V13.9789L13.8538 9.09724L6.18262 4.21561Z" fill="#FF319F" stroke="#FF319F" stroke-width="2.78951" stroke-linecap="round" stroke-linejoin="round" />
                  </svg>
                </div>

                <!-- All Products -->
                <div class="breadcrumb-item">
                  <a href="/collections/all" class="breadcrumb-text-container">
                    <div class="breadcrumb-text">All Products</div>
                  </a>
                  <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M6.18262 4.21561V13.9789L13.8538 9.09724L6.18262 4.21561Z" fill="#FF319F" stroke="#FF319F" stroke-width="2.78951" stroke-linecap="round" stroke-linejoin="round" />
                  </svg>
                </div>

                <!-- Collections -->
                {% for collection in product.collections limit: 2 %}
                  <div class="breadcrumb-item">
                    <a href="{{ collection.url }}" class="breadcrumb-text-container">
                      <div class="breadcrumb-text">{{ collection.title }}</div>
                    </a>
                    {% unless forloop.last %}
                      <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M6.18262 4.21561V13.9789L13.8538 9.09724L6.18262 4.21561Z" fill="#FF319F" stroke="#FF319F" stroke-width="2.78951" stroke-linecap="round" stroke-linejoin="round" />
                      </svg>
                    {% endunless %}
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
      {% endif %}

      {% if section.settings.show_product_description %}
        <div class="content-description">
          {% if section.settings.description_source == 'product_description' %}
            {{ product.description }}
          {% else %}
            {{ section.settings.custom_description }}
          {% endif %}
        </div>
      {% endif %}

      {% if section.settings.show_collection_section %}
        {% assign product_collection = product.collections.first %}
        {% if product_collection %}
          <a href="{{ product_collection.url }}" class="category-section">
            <div class="content-header">
              <div class="content-title">{{ product_collection.title }}</div>
            </div>
            <div class="content-subtitle">{{ product_collection.description }}</div>
            <div class="content-stats">
              <div class="stat-item">
                <svg width="25" height="24" viewBox="0 0 25 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12.272 2.11627C17.7073 2.11627 22.1134 6.52241 22.1134 11.9576C22.1134 17.3929 17.7073 21.799 12.272 21.799C6.8368 21.799 2.43066 17.3929 2.43066 11.9576C2.43066 6.52241 6.8368 2.11627 12.272 2.11627ZM10.3038 8.0211V15.8942L16.2086 11.9576L10.3038 8.0211Z" fill="#3B132A"/>
                </svg>
                <div class="stat-text">{{ product_collection.products_count }} Courses</div>
              </div>
            </div>
          </a>
        {% endif %}
      {% endif %}

      {% if section.settings.show_digital_badge %}
        <div class="digital-badge-container">
          <div class="category-badge-content">
            <div class="badge-headline">{{ section.settings.badge_headline }}</div>
            <div class="badge-description">{{ section.settings.badge_description }}</div>
            <div class="badge-footer">{{ section.settings.badge_footer }}</div>
          </div>
          <div class="badge-image-container">
            {% if section.settings.badge_image %}
              <img
                src="{{ section.settings.badge_image | img_url: '250x178' }}"
                alt="Digital Badge"
                class="badge-image"
              >
            {% else %}
              <img src="https://placehold.co/250x178" alt="Digital Badge" class="badge-image">
            {% endif %}
          </div>
        </div>
      {% endif %}
    </div>
    {% if section.settings.show_sidebar %}
      <aside class="aside-container">
        <div class="top-section">
          <div class="main-headline">{{ section.settings.sidebar_headline }}</div>
          {% if product.featured_image %}
            <img
              class="hero-image"
              src="{{ product.featured_image | img_url: '250x178' }}"
              alt="{{ product.title }}"
            >
          {% else %}
            <img class="hero-image" src="https://placehold.co/250x178" alt="Product image">
          {% endif %}
          <form action="/cart/add" method="post" enctype="multipart/form-data" style="display: inline;">
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
            <input type="hidden" name="return_to" value="/checkout">
            <input type="hidden" name="quantity" value="1">
            <button
              type="submit"
              name="checkout"
              class="cta-button"
              style="border: none; cursor: pointer; width: 100%;"
            >
              <div class="cta-text">{{ section.settings.cta_button_text }}</div>
            </button>
          </form>
          <div class="description">{{ section.settings.sidebar_description }}</div>
          <div class="disclaimer">
            <div class="asterisk">*</div>
            <div class="disclaimer-text">
              <div>{{ section.settings.disclaimer_text }}</div>
            </div>
          </div>
        </div>

        <div class="bottom-sections">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'article_block' %}
                <a
                  href="{{ block.settings.article_link | default: '#' }}"
                  class="content-block content-block-{{ forloop.index }}"
                  {{ block.shopify_attributes }}
                >
                  <div class="block-title">{{ block.settings.article_title }}</div>
                  <div class="block-description{% if forloop.index == 2 %}-2{% elsif forloop.index == 3 %}-3{% endif %}">
                    {{ block.settings.article_description }}
                  </div>
                  <div class="link-container">
                    <div class="link-text">{{ block.settings.article_link_text }}</div>
                    <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M6.49805 4.0752V13.8385L14.1692 8.95683L6.49805 4.0752Z" fill="#FF319F" stroke="#FF319F" stroke-width="2.78951" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                  </div>
                </a>
            {% endcase %}
          {% endfor %}
        </div>
      </aside>
    {% endif %}
  </div>
</div>

